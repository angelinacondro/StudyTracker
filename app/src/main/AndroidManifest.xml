<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angelinacondro.studytracker">
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <application
        android:name="com.angelinacondro.studytracker.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.angelinacondro.studytracker.activity.DoTask" />
        <activity android:name="com.angelinacondro.studytracker.activity.AddSchedule" />
        <activity
            android:name="com.angelinacondro.studytracker.activity.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.angelinacondro.studytracker.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.angelinacondro.studytracker.receiver.AlertReceiver" />

    </application>

</manifest>