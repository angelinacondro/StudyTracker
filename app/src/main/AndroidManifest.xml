<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.angelinacondro.focus">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.activity.Login"></activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.activity.Register" />
        <activity android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.activity.AddSchedule" />
        <activity
            android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.activity.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.activity.MainActivity" />

        <receiver android:name="id.ac.ui.cs.mobileprogramming.angelinacondro.focus.receiver.AlertReceiver" />
    </application>

</manifest>